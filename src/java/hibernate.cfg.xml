<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mercadoservicos</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">masterkey</property>
    <property name="hibernate.jdbc.use_get_generated_keys">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping class="br.com.mercadoservicos.domain.Categoria"/>
    <mapping class="br.com.mercadoservicos.domain.Servico"/>
    <mapping class="br.com.mercadoservicos.domain.Usuario"/>
    <mapping class="br.com.mercadoservicos.domain.OrdemServico"/>
    <mapping class="br.com.mercadoservicos.domain.ItensOrdemServico"/>
  </session-factory>
</hibernate-configuration>
